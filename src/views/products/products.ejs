<%- include("../partials/head") %>
    <body>
        <%-include("../partials/header")%>
        <main>
            <div class="product">
            <div class="product_title_edit"><%= producto.name %></div>
            <div class="product_description_edit"><%= producto.category.product_category %></div>

            <div class="prod-sub">
                <%= producto.description %>
            </div>
            <img class="product-image" src="<%= "../../" + producto.image %>">
            <div class="product-bottom">
                <span class="product-window-price"><%= producto.price %></span>
                <div class="cart-quantity-controls">
                    <button>-</button>
                    <input type="number" value="1" readonly />
                    <button>+</button>
                </div>
            </div>
            <div class="pagar"><input type="submit" value="Agregar al carro"></div>
            <a href="/products/<%= producto.id %>/edit"><button  class="boton-editar">Editar</button></a>
        </main>
        <%-include("../partials/footer")%>
    </body>
</html>
