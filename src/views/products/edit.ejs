<%- include("../partials/head") %>
    <body>
        <%- include("../partials/header") %>
        <section class="edit-main-page">
            <div class="edit_page">
                    <form class="formulario_producto" method="POST" action="/products/<%= producto.id %>?_method=PUT" enctype = "multipart/form-data">
                        <div class="txt_field">
                            <input id="nombre_producto" type="text" value="<%= producto.name %>" name="name" required>
                            <div class="dinamic-product-feedback"></div>
                            <label>Nombre de Producto</label>
                        </div>
                        <div class="txt_field">
                            <input id="precio_producto" type="text" value="<%= producto.price %>" name="price" required>
                            <div class="dinamic-price-feedback"></div>
                            <label>Precio</label>
                        </div>
                        <div class="txt_field_comment">
                            <textarea id="descripcion_producto" class="box_comment" name="description"><%= producto.description %></textarea>
                            <div class="dinamic-description-feedback"></div>
                        </div>
                        <div class="upload_edit">
                            <input type="file" id="file" accept="image/*" name="imagen-producto">
                            <label for="file"> Cargar imagen</label>
                        </div>
                        <div class="botones-edit">
                            <input type="submit" value="confirmar ediciÃ³n">
                        </div>
                    </form>
                    <form class="formulario" method="POST" enctype="multipart/form-data" action="/products/<%= producto.id %>?_method=DELETE">
                        <div class="botones-edit">
                            <input type="submit" value="Eliminar Producto">
                        </div>
                    </form>
                </div>
            </div>
        </section>
        <br>
        <script src="../../js/editProduct.js">
        </script>
    </body>
</html>

