<%- include("../partials/head") %>

    <body>
        <%- include("../partials/header") %>
        <section class="login_full">
            <div class="edit_page">
                <div class="center">
                    <form class="formulario" method="POST" action="/products/<%= producto.id %>?_method=PUT">
                        <div class="txt_field">
                            <input type="text" value="<%= producto.nombre %>" name="name" required>
                            <label>Nombre de Producto</label>
                        </div>
                        <div class="txt_field">
                            <input type="text" value="<%= producto.precio %>" name="price" required>
                            <label>Precio</label>
                        </div>
                        <div class="txt_field_comment">
                            <textarea class="box_comment" name="description"><%= producto.descripcion %></textarea>
                        </div>
