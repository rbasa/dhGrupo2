<%- include("../partials/head") %>
<body>
<%- include("../partials/header") %>
    <main>
        <section class="login_full">
            <div class="center">
                <div class="center">
                <form class="formulario" method = "post" action = "/products" enctype = "multipart/form-data">
                    <h2>Crear producto</h2>
                    <% if(locals.errors) { %>
                        <% errors.forEach(error => { %>
                            <p><%= error.msg %></p>
                        <% }); %>
                    <% }; %>
                    <div class="txt_field">
                        <input name="name" type="text" value="<%= locals.old && old.name ? old.name : '' %>">
                        <span></span>
                        <label>Nombre</label>
                    </div>
                    <div class="txt_field">
                        <input name="category" type="text" value="<%= locals.old && old.category ? old.category : '' %>">
                        <span></span>
                        <label>Clase</label>
                    </div>
                    <div class="txt_field">
                        <input name="description" type="text" value="<%= locals.old && old.description ? old.description : '' %>">
                        <span></span>
                        <label>Descripci√≥n</label>
                    </div>
                    <div class="txt_field">
                        <input name="price" type="text" value="<%= locals.old && old.price ? old.price : '' %>">
                        <span></span>
                        <label>Precio</label>
                    </div>
                   <div class="upload">
                        <input type="file" id="file" accept="image/*" name ="imagen-producto">
                        <label for="file"> Cargar imagen</label>
                    </div>
                    <input type="submit" value="Crear producto">            
                </form>
            </div>
        </section>
    </main>
</body>
</html>
