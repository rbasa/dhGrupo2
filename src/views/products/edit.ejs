                        <input type="file" id="file" accept="image/*">
                        <label for="file"> Cargar imagen</label>
                         </div> -->
                        <div class="botones-edit">
                            <input type="submit" value="editar">

                        </div>
                    </form>
                </div>
            </div>
        </section>
        <br>
        <section class="login_full">
            <div class="edit_page">
                <div class="center">
                    <form class="formulario" method="POST" action="/products/<%= producto.id %>?_method=DELETE">
                        <div class="botones-edit">
                            <input type="submit" value="Elimiar Producto">

                        </div>
                    </form>
                </div>
            </div>
        </section>
    </body>
</html>

